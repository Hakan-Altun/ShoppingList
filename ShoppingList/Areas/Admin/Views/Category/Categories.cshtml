
@model List<Entities.Category>

<head>
    <link href="~/table/style.css" rel="stylesheet" />
</head>
<body>

    <div align="center"><h2>Kategoriler</h2></div>

    <table id="category">
        <thead>
            <tr>
                <th>Kategori No</th>
                <th>Kategori Adı</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>


        <tbody>
            @foreach (Category item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td><a asp-area="Admin"asp-controller="Category"asp-action="GetCategory" asp-route-id="@item.CategoryId"><button class="btn1">Güncelle</button></a></td>
                    <td><a a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryId"><button class="btn2">Sil</button></a></td>
                </tr>

            }
        </tbody>

    </table>

</body>