
@model Entities.User
@{
	Layout = "_userLayout";
}
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="~/stil/style.css" rel="stylesheet">
	<title>Kayıt Sayfası</title>
</head>
<body>
	<!-- Main Content -->
	<div class="container-fluid">
		<div class="row main-content bg-success text-center">
			<div class="col-md-4 text-center company__info">
				<span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
				<h4 class="company_title" style="font-style:oblique">Üye Kayıt Formu</h4>
			</div>
			<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
				<div class="container-fluid">
					<div class="row">
						<h3>Kayıt Ol</h3>
					</div>
					<div class="row">
						@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
						{
							<div class="row">
							@Html.TextBoxFor(x => x.UserName, new {@class = "form-control",placeholder="İsim"})
							@Html.ValidationMessageFor(x => x.UserName, null, new {@class = "invalid-feedback d-block"})
							</div>
							<div class="row">
								<!-- <span class="fa fa-lock"></span> -->
							@Html.TextBoxFor(x => x.UserLastName, new {@class = "form-control",placeholder="Soyadı"})
							@Html.ValidationMessageFor(x => x.UserLastName, null, new {@class = "invalid-feedback d-block"})
							</div>
							<div class="row">
							@Html.TextBoxFor(x => x.UserEmail, new {@class = "form-control", placeholder = "Email"})
							@Html.ValidationMessageFor(x => x.UserEmail, null, new {@class = "invalid-feedback d-block"})	
							</div>
							<div class="row">
							@Html.PasswordFor(x => x.UserPassword, new {@class = "form-control", placeholder = "Şifre"})
							@Html.ValidationMessageFor(x => x.UserPassword, null, new {@class = "invalid-feedback d-block"})
							</div>
							<div class="row">
							@Html.PasswordFor(x => x.ConfirmPassword, new {@class = "form-control", placeholder = "Şifre(Tekrar)"})
							@Html.ValidationMessageFor(x => x.ConfirmPassword, null, new {@class = "invalid-feedback d-block"})
							</div>
							<div class="row">
								
								<input type="submit" value="Kayıt Ol" class="btn">
							</div>
						}
					</div>
					<div class="row">
						<p>Zaten bir hesabınız var mı?</p><a class="btn2" asp-action="Login" asp-controller="User">Giriş Yap</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
