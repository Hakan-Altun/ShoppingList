@using Entities
@model ProductDetail

<head>
    <link href="~/table/style.css" rel="stylesheet" />
</head>
<body>

    <div align="center"><h2>Ürün Detayları</h2></div>

    <table id="category">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Ürün Görseli</th>
                <th>Marka</th>
                <th>Miktar</th>
            </tr>
        </thead>


        <tbody>
            
            
                <tr>
                    <td>@Model.ProductName</td>
                    <td>@Model.ProductImage</td>
                    <td>@Model.Brand</td>
                    <td>@Model.Quantity</td>
                </tr>

            
        </tbody>

    </table>

</body>